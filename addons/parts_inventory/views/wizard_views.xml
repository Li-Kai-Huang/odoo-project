<odoo>
  <record id="view_export_moves_wizard_form" model="ir.ui.view">
    <field name="name">parts.inventory.export.moves.wizard.form</field>
    <field name="model">parts.inventory.export.moves.wizard</field>
    <field name="arch" type="xml">
      <form string="Export Moves">
        <sheet>
          <group>
            <field name="part_id" options="{'no_create_edit': True}"/>
            <field name="team_id" options="{'no_create_edit': True}"/>
          </group>
          <group string="Date Range">
            <field name="date_from" required="1"/>
            <field name="date_to" required="1"/>
          </group>
          <group string="Format">
            <field name="export_format" required="1"/>
            <field name="include_note" invisible="export_format != 'xlsx'"/>
          </group>
        </sheet>
        <footer>
          <button string="Export" type="object" name="action_export" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_open_export_moves_wizard_from_part" model="ir.actions.act_window">
    <field name="name">Export Moves</field>
    <field name="res_model">parts.inventory.export.moves.wizard</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_export_moves_wizard_form"/>
    <field name="target">new</field>
    <field name="context">{'default_part_id': active_id}</field>
  </record>
</odoo>
