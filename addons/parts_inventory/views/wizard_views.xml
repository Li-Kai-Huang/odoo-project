<!-- addons/parts_inventory/views/wizard_views.xml -->
<odoo>
  <!-- Wizard form view -->
  <record id="view_quick_move_wizard_form" model="ir.ui.view">
    <field name="name">parts.inventory.quick.move.wizard.form</field>
    <field name="model">parts.inventory.quick.move.wizard</field>
    <field name="arch" type="xml">
      <form string="Quick Move">
        <group>
          <field name="part_id"/>
          <field name="move_type"/>
          <field name="quantity"/>
          <field name="note"/>
        </group>
        <footer>
          <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <!-- Window action（給需要直接以外部 ID 開窗時用；現階段我們用 product 的 object method 也可） -->
  <record id="action_open_quick_move_wizard" model="ir.actions.act_window">
    <field name="name">Quick Move</field>
    <field name="res_model">parts.inventory.quick.move.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <!-- 注意：context 的 default_part_id 會由呼叫端（product.template 的 method）傳入 -->
  </record>
</odoo>
