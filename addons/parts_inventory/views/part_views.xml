<odoo>
  <!-- Parts：Tree -->
  <record id="view_parts_tree" model="ir.ui.view">
    <field name="name">parts.inventory.part.tree</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="quantity" string="Quantity in Stock"/>
        <field name="team_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <!-- Parts：Form -->
  <record id="view_parts_form" model="ir.ui.view">
    <field name="name">parts.inventory.part.form</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <!-- Smart Button：只看此 Part 的 Moves -->
          <button class="oe_stat_button" type="action"
                  name="%(parts_inventory.action_moves_from_part)d"
                  invisible="not id">
            <div class="o_stat_info">
              <span class="o_stat_text">Team Moves</span>
            </div>
          </button>

          <!-- 列印 PDF（ir.actions.report 的 xmlid） -->
          <button name="%(parts_inventory.action_report_part_pdf)d" type="action"
                  string="Print PDF" class="oe_highlight"/>

          <!-- 匯出 Excel（wizard action 的 xmlid） -->
          <button type="action"
                  name="%(parts_inventory.action_open_export_moves_wizard_from_part)d"
                  string="Export Excel" class="btn-secondary"/>
        </header>

        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="description"/>
            <field name="quantity"/>
            <field name="team_id"/>
            <field name="active"/>
          </group>

          <notebook>
            <page string="Stock Moves">
              <!-- 只展示（避免 inline 編輯造成 DOM/樣式錯亂） -->
              <field name="move_ids" mode="tree,form"
                     context="{}"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- 開清單用 -->
  <record id="action_parts" model="ir.actions.act_window">
    <field name="name">Parts</field>
    <field name="res_model">parts.inventory.part</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
