<odoo>
  <record id="action_parts" model="ir.actions.act_window">
    <field name="name">Parts</field>
    <field name="res_model">parts.inventory.part</field>
    <field name="view_mode">tree,form</field>
  </record>
  <record id="action_tasks_from_part" model="ir.actions.act_window">
    <field name="name">Related Tasks</field>
    <field name="res_model">project.task</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="domain">[('part_id', '=', active_id)]</field>
    <field name="context">{'default_part_id': active_id}</field>
    <field name="target">current</field>
  </record>
  <record id="view_parts_tree" model="ir.ui.view">
    <field name="name">parts.inventory.part.tree</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="quantity" string="Quantity in Stock"/>
        <field name="team_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_parts_form" model="ir.ui.view">
    <field name="name">parts.inventory.part.form</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button class="oe_stat_button" type="action"
                  name="%(parts_inventory.action_moves_from_part)d"
                  invisible="not id">
            <div class="o_stat_info">
              <span class="o_stat_text">Team Moves</span>
            </div>
          </button>
          <button name="%(parts_inventory.action_report_part_pdf)d" type="action"
                  string="Print PDF" class="oe_highlight"/>
          <button type="action"
                  name="%(parts_inventory.action_open_export_moves_wizard_from_part)d"
                  string="Export Excel" class="btn-secondary"/>
          <xpath expr="//form/header" position="inside">
            <button class="oe_stat_button"
          type="action"
          name="%(parts_inventory.action_tasks_from_part)d"
          invisible="not id">
              <div class="o_stat_info">
                <span class="o_stat_text">Tasks</span>
              </div>
            </button>
          </xpath>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="description"/>
            <field name="quantity"/>
            <field name="team_id"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="Stock Moves">
              <field name="move_ids" mode="tree,form"
                     context="{}"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>