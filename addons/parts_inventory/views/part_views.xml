<odoo>
  <!-- Tree：清單要看到 Code / Name / Quantity / Team / Active -->
  <record id="view_parts_tree" model="ir.ui.view">
    <field name="name">parts.inventory.part.tree</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code" string="Part Code"/>
        <field name="name" string="Part Name"/>
        <field name="quantity" string="Quantity in Stock"/>
        <field name="team_id" string="Team"/>
        <field name="active" string="Active"/>
      </tree>
    </field>
  </record>
  <!-- Search：常用搜尋 + 篩選 Active/Inactive -->
  <record id="view_parts_search" model="ir.ui.view">
    <field name="name">parts.inventory.part.search</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <search string="Search Parts">
        <field name="code" string="Part Code"/>
        <field name="name" string="Part Name"/>
        <field name="team_id" string="Team" filter_domain="[]"/>
        <filter string="Active" name="active_true" domain="[('active','=',True)]" help="Active parts"/>
        <filter string="Archived" name="active_false" domain="[('active','=',False)]" help="Inactive parts"/>
      </search>
    </field>
  </record>
  <!-- Form：欄位 + One2many 明細 + Smart Button（打開該 Part 的 Moves） -->
  <record id="view_parts_form" model="ir.ui.view">
    <field name="name">parts.inventory.part.form</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <!-- Smart Button：打開 Moves（你已經有 action_moves_from_part 的話保持不變） -->
          <button class="oe_stat_button"
          type="action"
          name="%(parts_inventory.action_moves_from_part)d"
          invisible="not id">
            <div class="o_stat_info">
              <span class="o_stat_text">Team Moves</span>
            </div>
          </button>
          <!-- Print PDF：引用剛剛定義的 ir.actions.report -->
          <button name="%(parts_inventory.action_report_part_pdf)d"
          type="action"
          string="Print PDF"
          class="oe_highlight"/>
          <!-- Export Excel：引用 wizard 的 action（不要放數字） -->
          <button type="action"
          name="%(parts_inventory.action_open_export_moves_wizard_from_part)d"
          string="Export Excel"
          class="btn-secondary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="description"/>
            <field name="quantity"/>
            <field name="team_id"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="Stock Moves">
              <!-- 讓 One2many 以清單顯示，點進去仍可開 form -->
              <field name="move_ids" mode="tree,form" context="{}"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
  <!-- Action：list + form -->
  <record id="action_parts" model="ir.actions.act_window">
    <field name="name">Team Parts</field>
    <field name="res_model">parts.inventory.part</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_parts_search"/>
  </record>
  <record id="action_moves_from_part" model="ir.actions.act_window">
    <field name="name">Team Moves</field>
    <field name="res_model">parts.inventory.stock.move</field>
    <field name="view_mode">tree,form</field>
    <!-- 從 Part 的 smart button 進來：帶 domain + default_part_id -->
    <field name="domain">[('part_id', '=', active_id)]</field>
    <field name="context">{'default_part_id': active_id}</field>
  </record>
</odoo>