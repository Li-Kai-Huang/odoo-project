<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Part: Tree -->
  <record id="view_part_tree" model="ir.ui.view">
    <field name="name">parts.inventory.part.tree</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="quantity"/>
        <field name="team_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <!-- Part: Form -->
  <record id="view_part_form" model="ir.ui.view">
    <field name="name">parts.inventory.part.form</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
            <field name="description"/>
            <field name="team_id"/>
            <field name="active"/>
          </group>
          <group>
            <field name="quantity" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Part: Search -->
  <record id="view_part_search" model="ir.ui.view">
    <field name="name">parts.inventory.part.search</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <search>
        <field name="code"/>
        <field name="name"/>
        <filter name="has_team" string="Has Team" domain="[('team_id','!=',False)]"/>
        <group expand="0" string="Group By">
          <filter name="group_by_team" string="Team" context="{'group_by':'team_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Part: Action -->
  <record id="action_parts" model="ir.actions.act_window">
    <field name="name">Parts</field>
    <field name="res_model">parts.inventory.part</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_part_search"/>
  </record>
</odoo>
