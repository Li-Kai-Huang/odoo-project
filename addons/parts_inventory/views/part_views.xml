<odoo>
  <record id="view_part_tree" model="ir.ui.view">
    <field name="name">parts.inventory.part.tree</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="quantity"/>
        <field name="team_id"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_part_form" model="ir.ui.view">
    <field name="name">parts.inventory.part.form</field>
    <field name="model">parts.inventory.part</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="description"/>
            <field name="quantity"/>
            <field name="team_id"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="Stock Moves">
              <field name="stock_move_ids">
                <tree editable="bottom">
                  <field name="date"/>
                  <field name="move_type"/>
                  <field name="quantity"/>
                  <field name="state"/>
                  <field name="note"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_part" model="ir.actions.act_window">
    <field name="name">Parts</field>
    <field name="res_model">parts.inventory.part</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
