<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Stock Move: Tree -->
  <record id="view_stock_move_tree" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.tree</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="part_id"/>
        <field name="move_type"/>
        <field name="quantity"/>
        <field name="state"/>
        <field name="note"/>
      </tree>
    </field>
  </record>

  <!-- Stock Move: Form -->
  <record id="view_stock_move_form" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.form</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft'"/>
          <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" invisible="state == 'cancel'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancel"/>
        </header>
        <sheet>
          <group>
            <field name="part_id"/>
            <field name="move_type"/>
            <field name="quantity"/>
          </group>
          <group>
            <field name="date"/>
            <field name="note"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Stock Move: Search -->
  <record id="view_stock_move_search" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.search</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <search>
        <field name="part_id"/>
        <filter name="only_in" string="Only In" domain="[('move_type','=','in')]"/>
        <filter name="only_out" string="Only Out" domain="[('move_type','=','out')]"/>
        <group expand="0" string="Group By">
          <filter name="group_by_part" string="Part" context="{'group_by':'part_id'}"/>
          <filter name="group_by_state" string="Status" context="{'group_by':'state'}"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Stock Move: Action -->
  <record id="action_stock_moves" model="ir.actions.act_window">
    <field name="name">Stock Moves</field>
    <field name="res_model">parts.inventory.stock.move</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_stock_move_search"/>
  </record>
</odoo>
