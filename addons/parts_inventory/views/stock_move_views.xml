<odoo>
  <record id="view_stock_move_tree" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.tree</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <tree>
        <field name="part_id"/>
        <field name="date"/>
        <field name="move_type"/>
        <field name="quantity"/>
        <field name="state"/>
        <field name="note"/>
      </tree>
    </field>
  </record>

  <record id="view_stock_move_form" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.form</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="part_id"/>
            <field name="date"/>
            <field name="move_type"/>
            <field name="quantity"/>
            <field name="note"/>
            <field name="state"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_stock_move_search" model="ir.ui.view">
    <field name="name">parts.inventory.stock.move.search</field>
    <field name="model">parts.inventory.stock.move</field>
    <field name="arch" type="xml">
      <search>
        <field name="part_id"/>
        <field name="move_type"/>
        <field name="state"/>
        <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>
        <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
      </search>
    </field>
  </record>

  <record id="action_stock_move" model="ir.actions.act_window">
    <field name="name">Stock Moves</field>
    <field name="res_model">parts.inventory.stock.move</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
