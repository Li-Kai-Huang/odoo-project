<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Tree View -->
  <record id="view_team_tree" model="ir.ui.view">
    <field name="name">team.management.team.tree</field>
    <field name="model">team.management.team</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="description"/>
        <field name="member_count"/>
      </tree>
    </field>
  </record>

  <!-- Form View -->
  <record id="view_team_form" model="ir.ui.view">
    <field name="name">team.management.team.form</field>
    <field name="model">team.management.team</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="project_id"/>
            <field name="member_count" readonly="1"/>
          </group>
          <notebook>
            <page string="Members">
              <field name="member_ids">
                <tree editable="bottom">
                  <field name="name"/>
                  <field name="role"/>
                  <field name="user_id"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Kanban View -->
  <record id="view_team_kanban" model="ir.ui.view">
    <field name="name">team.management.team.kanban</field>
    <field name="model">team.management.team</field>
    <field name="arch" type="xml">
      <kanban default_group_by="project_id">
        <field name="name"/>
        <field name="description"/>
        <field name="member_count"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click">
              <strong><field name="name"/></strong>
              <div><field name="description"/></div>
              <div>Members: <field name="member_count"/></div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <!-- Search View -->
  <record id="view_team_search" model="ir.ui.view">
    <field name="name">team.management.team.search</field>
    <field name="model">team.management.team</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="description"/>
        <filter string="Has Project" domain="[('project_id','!=',False)]"/>
      </search>
    </field>
  </record>

  <!-- Action -->
  <record id="action_team" model="ir.actions.act_window">
    <field name="name">Teams</field>
    <field name="res_model">team.management.team</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="search_view_id" ref="view_team_search"/>
  </record>

  <!-- Menu -->
  <menuitem id="menu_team_root" name="Team Management" sequence="10"/>
  <menuitem id="menu_team" name="Teams" parent="menu_team_root" action="action_team"/>
</odoo>
