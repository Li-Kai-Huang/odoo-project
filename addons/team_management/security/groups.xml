<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_team_member" model="res.groups">
            <field name="name">Team Member</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">The user will only have access to view their own team and profile.</field>
        </record>

        <record id="group_team_leader" model="res.groups">
            <field name="name">Team Leader</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">The user will have access to manage their own team and members.</field>
            <field name="implied_ids" eval="[(4, ref('group_team_member'))]"/>
        </record>

        <record id="group_team_coach" model="res.groups">
            <field name="name">Team Coach</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">The user will have full access to manage all teams and members.</field>
            <field name="implied_ids" eval="[(4, ref('group_team_leader')), (4, ref('group_team_member'))]"/>
        </record>
    </data>
</odoo>